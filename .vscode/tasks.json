// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Package BF2M Addon",
            "type": "shell",
            // This command uses a special VS Code variable to find your
            // current Python interpreter, making it super portable.
            "command": "${command:python.interpreterPath}",
            "args": [
                "package_addon.py"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "clear": true
            }
        }
    ]
}